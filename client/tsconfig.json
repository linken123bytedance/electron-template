{
  "compilerOptions": {
    "module": "esnext",
    "target": "esnext",
    "importHelpers": true,
    "sourceMap": true,
    "strict": true,
    "skipLibCheck": true,
    "strictNullChecks": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "noImplicitAny": false,
    "allowSyntheticDefaultImports": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "typeRoots": [
      "./node_modules/@types",
      "./src/types"
    ]
  },
  "include": ["./src"],
  "exclude": [
    "./node_modules"
  ]
}