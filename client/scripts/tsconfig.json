{
  "compilerOptions": {
    "baseUrl": "..",
    "module": "esnext",
    "target": "esnext",
    "sourceMap": false,
    "strict": true,
    "skipLibCheck": true,
    "strictNullChecks": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "noImplicitAny": false,
    "allowSyntheticDefaultImports": true,
    "typeRoots": ["./node_modules/@types", "./src/types"],
    "paths": {
      "@scripts/*": ["./scripts/*"]
    }
  },
  "include": ["./scripts"],
  "exclude": ["./node_modules"]
}
